<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/appbackgroundimage2"
    android:alpha=".9"
    android:layout_height="match_parent"
    tools:context=".view.MainActivity">

    <LinearLayout
        android:id="@+id/temperature_linearLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:orientation="vertical"
        android:padding="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/location_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CITY OF TSHWANE"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/temperature_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="11 C"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:textSize="52sp"/>

        <TextView
            android:id="@+id/description_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Partly Cloudy"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:textSize="14sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/maxTemperature_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:text="H:26"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/minTenperature_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="L:11"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold" />

        </LinearLayout>

        <ImageView
            android:id="@+id/weather_imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/defaultweatherimage" />

    </LinearLayout>

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="24dp"
        android:scrollbars="none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/temperature_linearLayout"
        app:layout_constraintStart_toStartOf="@id/temperature_linearLayout"
        app:layout_constraintTop_toBottomOf="@id/temperature_linearLayout">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="2dp">

                <!-- hourly forecast linear layout-->
                <LinearLayout
                    android:id="@+id/hourlyForecast_linearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:alpha=".9"
                    android:orientation="vertical"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="parent">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/hourlyForecast_recyclerView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="12dp"
                        android:orientation="horizontal"
                        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="parent"
                        tools:listitem="@layout/recycler_view_layout" />


                </LinearLayout>


                <!-- daily forecast linear layout -->
                <LinearLayout
                    android:id="@+id/daysForecast_linearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="400dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/linear_layout_shape"
                    android:elevation="16dp"
                    android:visibility="gone"
                    android:alpha=".9"
                    android:orientation="vertical"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="parent">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:paddingStart="4dp"
                        android:layout_marginStart="8dp"
                        android:drawablePadding="4dp"
                        app:drawableTint="@color/linearLayoutTitleColor"
                        android:drawableStart="@drawable/dailyforecast_img"
                        android:textSize="12sp"
                        android:textColor="@color/linearLayoutTitleColor"
                        android:text="8-day forecast"
                        android:textAllCaps="true" />


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/linearLayoutTitleColor"
                        android:layout_marginTop="4dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"/>


                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:backgroundTint="@color/white"
                    android:background="@color/linearLayoutTitleColor"
                    android:layout_marginTop="12dp"
                    android:alpha=".5"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:paddingStart="4dp"
                    android:layout_marginStart="8dp"
                    android:drawablePadding="4dp"
                    app:drawableTint="@color/linearLayoutTitleColor"
                    android:textColor="@color/white"
                    android:text="Extended forecast"
                    android:textAllCaps="true" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:backgroundTint="@color/white"
                    android:background="@color/linearLayoutTitleColor"
                    android:layout_marginTop="4dp"
                    android:layout_marginStart="8dp"
                    android:alpha=".5"
                    android:layout_marginEnd="8dp"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:orientation="horizontal">

                    <!--Feels like linear layout-->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:layout_weight=".5"
                        android:alpha=".9"
                        android:layout_marginBottom="8dp"
                        android:background="@drawable/linear_layout_shape"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:paddingStart="4dp"
                            android:textSize="12sp"
                            android:drawableStart="fe"
                            android:textColor="@color/linearLayoutTitleColor"
                            android:text="Feels like"
                            android:textAlignment="center"
                            android:textAllCaps="true" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/feelslike_img"
                            android:layout_margin="8dp"
                            android:layout_gravity="center"/>

                        <TextView
                            android:id="@+id/feelsLikeTemperature_textView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="11C"
                            android:textColor="@color/white"
                            android:textAlignment="center"
                            android:textAllCaps="true"
                            android:layout_marginBottom="12dp"
                            android:textSize="24dp"
                            android:textStyle="bold" />


                    </LinearLayout>

                    <!--Humidity linear layout-->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:alpha=".9"
                        android:layout_weight=".5"
                        android:background="@drawable/linear_layout_shape"
                        android:orientation="vertical">


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="Humidity"
                            android:textSize="12sp"
                            android:textColor="@color/linearLayoutTitleColor"
                            android:textAlignment="center"
                            android:textAllCaps="true" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/himidity_img"
                            android:layout_margin="8dp"
                            android:layout_gravity="center"/>

                        <TextView
                            android:id="@+id/humidity_textView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="01:00"
                            android:textColor="@color/white"
                            android:textAlignment="center"
                            android:textAllCaps="true"
                            android:layout_marginBottom="12dp"
                            android:textSize="24dp"
                            android:textStyle="bold" />


                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!--Wind linear layout-->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="8dp"
                        android:alpha=".9"
                        android:layout_weight=".5"
                        android:background="@drawable/linear_layout_shape"
                        android:orientation="vertical">


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="Wind"
                            android:textSize="12sp"
                            android:textColor="@color/linearLayoutTitleColor"
                            android:textAlignment="center"
                            android:textAllCaps="true" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/wind_img"
                            android:layout_margin="8dp"
                            android:layout_gravity="center"/>

                        <TextView
                            android:id="@+id/windSpeed_textView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="00:00"
                            android:textColor="@color/white"
                            android:textAlignment="center"
                            android:textAllCaps="true"
                            android:textSize="24dp"
                            android:layout_marginBottom="12dp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <!--Pressure linear layout-->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:alpha=".9"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:background="@drawable/linear_layout_shape"
                        android:orientation="vertical">


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="Pressure"
                            android:textSize="12sp"
                            android:textColor="@color/linearLayoutTitleColor"
                            android:textAlignment="center"
                            android:textAllCaps="true" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/pressure_img"
                            android:layout_margin="8dp"
                            android:layout_gravity="center"/>


                        <TextView
                            android:id="@+id/pressure_textView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="00:00"
                            android:textColor="@color/white"
                            android:textAlignment="center"
                            android:textSize="24dp"
                            android:layout_marginBottom="12dp"
                            android:textStyle="bold" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <!--Visibility linear layout-->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:alpha=".9"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:layout_weight=".5"
                        android:background="@drawable/linear_layout_shape"
                        android:orientation="vertical">


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="Visibility"
                            android:textSize="12sp"
                            android:textColor="@color/linearLayoutTitleColor"
                            android:textAlignment="center"
                            android:textAllCaps="true" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/visibility_img"
                            android:layout_margin="8dp"
                            android:layout_gravity="center"/>


                        <TextView
                            android:id="@+id/visibility_textView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="00:00"
                            android:textColor="@color/white"
                            android:textAlignment="center"
                            android:textAllCaps="true"
                            android:textSize="24dp"
                            android:layout_marginBottom="12dp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <!--Sunset linear layout-->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:alpha=".9"
                        android:layout_weight=".5"
                        android:background="@drawable/linear_layout_shape"
                        android:orientation="vertical">


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="Sunset"
                            android:textSize="12sp"
                            android:textColor="@color/linearLayoutTitleColor"
                            android:textAlignment="center"
                            android:textAllCaps="true" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/sunset_img"
                            android:layout_margin="8dp"
                            android:layout_gravity="center"/>

                        <TextView
                            android:id="@+id/sunsetTime_textView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="00:00"
                            android:textColor="@color/white"
                            android:textAlignment="center"
                            android:textAllCaps="true"
                            android:layout_marginBottom="12dp"
                            android:textSize="24dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/sunriseTime_textView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="sunrise: 00:00"
                            android:textColor="@color/linearLayoutTitleColor"
                            android:textAlignment="center"
                            android:textAllCaps="false"
                            android:textSize="12dp" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>